@if (_sidebarLinks != null && _sidebarLinks.Any())
{
    <ilw-section-nav>
        <span class="ilw-section-nav--root">@_title</span>
        @foreach (var sidebarLink in _sidebarLinks)
        {
            @if (_baseUrl == sidebarLink.Url)
            {
                <a href="@sidebarLink.Url" aria-current="page">@sidebarLink.Text</a>
            }
            else
            {
                <a href="@sidebarLink.Url">@sidebarLink.Text</a>
            }
        }
   </ilw-section-nav>
}